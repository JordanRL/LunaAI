[flake8]
max-line-length = 100
exclude = .git,__pycache__,build,dist
extend-ignore =
    # Black handles whitespace, no need for flake8 to check
    E203,
    # Allow longer lines, Black will handle formatting
    E501,
    # Temporarily ignore unused imports while developing
    F401,
    # Temporarily ignore unused variables while developing
    F841,
    # Allow imports not at top of file for conditional imports
    E402,
    # Ignore all docstring related errors during development
    D100,D101,D102,D103,D104,D105,D106,D107,
    D200,D201,D202,D203,D204,D205,D206,D207,D208,D209,D210,D211,D212,D213,D214,D215,
    D300,D301,D302,D400,D401,D402,D403,D404,D405,D406,D407,D408,D409,D410,D411,D412,D413,D414,D415,D416,D417
